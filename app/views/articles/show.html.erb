  <h2 class="text-center mt-2" > <%= @article.title %> </h2>
  <div class="container">
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shadow-mb5 bg-white rounded">
            <span class="border border-primary"></span>
              <div class="card-header font-italic font-weight-bolder">
                by <%= @article.user.username if @article.user %>
                <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
              </div>
              <div class="card-body">
                <div class="card-text text-left"> <%= @article.description %> <%= simple_format(@article.description) %> </div>
              <% if logged_in? && @article.user == current_user %>
                <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-secondary" %>
                <%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
              <% end %>
              </div>
              <div class="card-footer text-muted">
                <small> Created <%= time_ago_in_words(@article.created_at)%> ago,
                  <%= time_ago_in_words(@article.updated_at)%> edited ago </small>
              </div>
                <span class="border border-primary"></span>
            </div>
          </div>
      </div>
  </div>
