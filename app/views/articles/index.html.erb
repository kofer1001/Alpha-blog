<h1 class="text-center mt-2" >Listing all articles</h1>
  <div class="container">
    <% @articles.each do |article| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center">
            <span class="border border-primary"></span>
              <div class="card-header font-italic font-weight-bolder">
                by <%= article.user.username %>
              </div>
              <div class="card-body">
                <h5 class="card-title"> <%= article.title %>  </h5>
                <p class="card-text"> <%= truncate(article.description, length: 100) %> </p>
                <button type="button" class="btn btn-outline-info"><%= link_to "View", article_path(article) %></button>
                <button type="button" class="btn btn-outline-secondary"> <%= link_to "Edit", edit_article_path(article) %> </button>
                <button type="button" class="btn btn-outline-danger"> <%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure?"} %> </button>
              </div>
              <div class="card-footer text-muted">
                <small> Created <%= time_ago_in_words(article.created_at)%> ago,
                  <%= time_ago_in_words(article.updated_at)%> edited ago </small>
              </div>
                <span class="border border-primary"></span>
            </div>
          </div>
      </div>
  <% end %>
  </div>
